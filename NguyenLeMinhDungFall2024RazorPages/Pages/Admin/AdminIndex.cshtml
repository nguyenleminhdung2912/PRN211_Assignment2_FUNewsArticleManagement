@page
@model NguyenLeMinhDungFall2024RazorPages.Pages.Admin.AdminIndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;  // Sử dụng layout tùy chỉnh cho Admin
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Custom styles */
        .dashboard-header {
            background-color: #e9ecef;
            padding: 2rem;
            border-radius: .5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .btn-custom {
            width: 100%;
            font-size: 1.2rem;
        }

        .welcome-message {
            color: #6c757d;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="dashboard-header text-center mb-4">
            <h2 class="display-4">Admin Dashboard</h2>
            <p class="welcome-message">Welcome, @User.Identity.Name!</p>
            <hr class="my-4">
            <p>Manage the system and generate reports efficiently.</p>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-area="Identity" asp-page="/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-custom">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Login" class="btn btn-primary btn-custom">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-user-cog"></i> Manage Accounts</h5>
                        <p class="card-text">View and manage user accounts, including adding, editing, or deleting accounts.</p>
                        <a asp-page="/Admin/ManageAccounts" class="btn btn-primary mt-auto btn-custom">
                            <i class="fas fa-arrow-right"></i> Go to Manage Accounts
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><i class="fas fa-chart-line"></i> Generate Reports</h5>
                        <p class="card-text">Create statistical reports based on specified time periods to monitor system activity.</p>
                        <a asp-page="/Admin/Report" class="btn btn-success mt-auto btn-custom">
                            <i class="fas fa-arrow-right"></i> Generate Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
