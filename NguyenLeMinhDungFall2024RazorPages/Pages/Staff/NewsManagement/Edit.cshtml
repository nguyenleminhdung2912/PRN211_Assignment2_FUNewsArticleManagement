@page
@model NguyenLeMinhDungFall2024RazorPages.Pages.Staff.NewsManagement.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = null; // Disable the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        .container-custom {
            margin-top: 2rem;
        }

        .btn-back {
            margin-bottom: 1rem;
        }

        .form-section {
            border: 1px solid #dee2e6; /* Bootstrap's default border color */
            border-radius: 0.25rem;
            padding: 1rem;
            background-color: #f8f9fa; /* Light background for sections */
            margin-bottom: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .text-danger {
            margin-top: 0.25rem; /* Add margin to error messages */
        }
    </style>
</head>
<body>
    <div class="container container-custom">
        <!-- Back button -->
        <a href="javascript:history.back()" class="btn btn-secondary btn-back">
            <i class="fas fa-arrow-left"></i> Back to Previous Page
        </a>

        <h1>Edit News Article</h1>
        <div class="form-section">
            <h4>News Article Details</h4>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NewsArticle.NewsArticleId" />

                <div class="form-group">
                    <label asp-for="NewsArticle.NewsTitle" class="control-label">News Title</label>
                    <input asp-for="NewsArticle.NewsTitle" class="form-control" />
                    <span asp-validation-for="NewsArticle.NewsTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.Headline" class="control-label"></label>
                    <input asp-for="NewsArticle.Headline" class="form-control" />
                    <span asp-validation-for="NewsArticle.Headline" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.NewsContent" class="control-label">News Content</label>
                    <textarea asp-for="NewsArticle.NewsContent" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="NewsArticle.NewsContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.NewsSource" class="control-label">News Source</label>
                    <input asp-for="NewsArticle.NewsSource" class="form-control" />
                    <span asp-validation-for="NewsArticle.NewsSource" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsArticle.CategoryId" class="control-label">Category</label>
                    <select asp-for="NewsArticle.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="NewsArticle.CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedTagIds" class="control-label">Tags</label>
                    <select asp-for="SelectedTagIds" class="form-control" asp-items="ViewBag.Tags"></select>
                    <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>

        <div>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
