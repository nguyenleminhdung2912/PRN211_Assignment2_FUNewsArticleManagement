<Window x:Class="NguyenLeMinhDung__SE1706_Fall2024_A01.Staff.CreateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenLeMinhDung__SE1706_Fall2024_A01.Staff"
        mc:Ignorable="d"
        Title="Create Category"
        Height="332"
        Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Create New Category"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <Label Content="Category Name:" />
            <TextBox Name="txtCategoryName"
                     HorizontalAlignment="Stretch"
                     Margin="0,0,0,10"
                     Height="30"
                     Padding="5" />

            <Label Content="Description:" />
            <TextBox Name="txtDescription"
                     HorizontalAlignment="Stretch"
                     Margin="0,0,0,10"
                     Height="60"
                     Padding="5"
                     AcceptsReturn="True" />
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Create"
                        Width="100"
                        Click="btnUpdate_Click"
                        Background="#2196F3"
                        Foreground="White"
                        Margin="0,0,5,0" />
                <Button Content="Cancel"
                        Width="100"
                        Click="btnCancel_Click"
                        Background="#F44336"
                        Foreground="White" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>